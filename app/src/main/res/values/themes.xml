<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KhaanaKartAdmin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="app_name">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">40sp</item>
        <item name="android:text">@string/splash_screen_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_theme_color</item>
    </style>

    <style name="app_slogan">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/app_slogan</item>
    </style>

    <style name="app_designed_by">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:text">@string/app_designed_by_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_theme_color</item>
    </style>

    <style name="primary_title">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_theme_color</item>
    </style>

    <style name="secondary_title">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_theme_color</item>
    </style>

    <style name="emphasis_text">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_theme_color</item>
    </style>

    <style name="primary_text_field">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/solid_text_field</item>
        <item name="android:elevation">5dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="tertiary_button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/solid_button</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="primary_button">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/primary_gradient_button</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="primary_screen_title">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_theme_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="form_title">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_theme_color</item>
    </style>

    <style name="form_text_field">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="card_view_food_name">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="card_view_food_price">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/primary_theme_color</item>
    </style>

    <style name="secondary_button">
        <item name="android:background">@drawable/secondary_gradient_button</item>
        <item name="android:elevation">2dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.KhaanaKartAdmin" parent="Base.Theme.KhaanaKartAdmin" />
</resources>